<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BorderStyle" TargetType="Border">

        <Setter Property="CornerRadius" Value="20" ></Setter>
        <Setter Property="Width" Value="80" ></Setter>
        <Setter Property="Height" Value="70" ></Setter>
        <Setter Property="Background" Value="Transparent" ></Setter>
        <Setter Property="BorderBrush" Value="DarkSeaGreen" ></Setter>
        <Setter Property="BorderThickness" Value="5"></Setter>
    </Style>
    <Style x:Key="TxtBlockStyle" TargetType="TextBlock"> 
        <Setter Property="FontWeight" Value="SemiBold"></Setter>
        <Setter Property="Foreground" Value="DarkSeaGreen"></Setter>       
        <Setter Property="FontSize" Value="26"></Setter>
        <Setter Property="Margin" Value="25,10,10,10"></Setter>
    </Style>    
    <Style x:Key="TxtBlockStyle2" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold"></Setter>
        <Setter Property="Foreground" Value="DarkSeaGreen"></Setter>
        <Setter Property="FontSize" Value="26"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="Height" Value="50"></Setter>
    </Style>
</ResourceDictionary>